<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{ title }}</title>
        
        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    </head>
    
    <body>
        <header>
        {% if navigation.items %}
          <nav class="nav">
            <ul>
              {% for item in navigation.items %}
                {% set externalAttribute = '' %}
                {% set currentAttribute = '' %}

                {% if item.external %}
                  {% set externalAttribute = ' rel="external"' %}
                {% endif %}

                {% if page.url == item.url %}
                  {% set currentAttribute = ' aria-current="page"' %}
                {% endif %}

                <li>
                  <a href="{{ item.url }}"{{ externalAttribute | safe }}{{ currentAttribute | safe }}>{{ item.text }}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
        </header>
        
        
    <main>
        <article>
            {{ content }}
        </article>
        
        <section class="blog-feed">
            <article class="blog-feed-item">
                {% for post in collections.blogposts limit: 3 %}
                    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                    <p>{{ post.date | date: "%d-%m-%Y" }}</p>
                    <a href="{{ post.url }}"><img src="{{ post.data.thumbnail }}" style="width: 500px; height: 300px;"/></a>
                    <p>{{ post.data.excerpt }}</p>
                {% endfor %}
            </article>
        </section>
        
        <section class="portfolio-feed">
            <article class="portfolio-feed-item">
                {% for post in collections.portfolioposts limit: 3 %}
                    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                    <p>{{ post.date | date: "%d-%m-%Y" }}</p>
                    <img src="{{ post.data.thumbnail }}" style="width: 500px; height: 300px;"/>
                {% endfor %}
            </article>
        </section>
    </main>
    </body>
    
</html>